{
    "parser": "@typescript-eslint/parser",
    "env": {
       "commonjs": true,
       "es6": true,
       "browser": true
    },
    "plugins": ["@typescript-eslint"],
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "parserOptions": {
       "ecmaVersion": 9,
       "sourceType": "module",
       "ecmaFeatures": {
          "modules": true,
          "experimentalObjectRestSpread": true
       }
    },
    "rules": {
       "indent": [
          "",
          3,
          {
             "SwitchCase": 1,
             "MemberExpression": "off"
          }
       ],
       "quotes": ["warn", "single"],
       "semi": ["error", "always"],
       "no-undef": 1,
       "no-unused-vars": 1,
       "space-before-blocks": "error",
       "keyword-spacing": [
          "error",
          {
             "before": true
          }
       ],
       "space-infix-ops": [
          "error",
          {
             "int32Hint": false
          }
       ],
       "no-redeclare": "off",
       "no-console": "warn",
       "brace-style": [
          "error",
          "1tbs",
          {
             "allowSingleLine": true
          }
       ],
       "no-multiple-empty-lines": [
          "warn",
          {
             "max": 1,
             "maxEOF": 1
          }
       ],
       "key-spacing": [
          "error",
          {
             "beforeColon": false
          }
       ],
       "spaced-comment": [
          "error",
          "always",
          {
             "exceptions": ["/"]
          }
       ],
       "no-trailing-spaces": "warn",
       "no-useless-escape": 1
    }
 }
 